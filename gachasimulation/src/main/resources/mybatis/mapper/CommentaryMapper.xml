	select count(*) from commentary
	</select>
    <!-- ðŸ“Œ ëŒ“ê¸€ ìž‘ì„± ì •ë³´ ìž…ë ¥ -->
    <insert id="putComment" parameterType="gacha.model.Commentary">
        INSERT INTO commentary VALUES (#{code}, #{post_id}, #{writer},#{content}, SYSDATE)
    </insert>
    
</mapper>