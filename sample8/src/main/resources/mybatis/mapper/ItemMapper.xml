<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.sample8.mapper.ItemMapper">
	<select id="findItem" parameterType="String" resultType="com.springboot.sample8.model.Item">
	select * from guail_tbl where title like '%' || #{name} || '%'
	</select>
	<update id="updateItem" parameterType="com.springboot.sample8.model.Item">
	update guail_tbl set title=#{title}, price=#{price}, info=#{info}, 
		image_name=#{image_name} where seqno = #{seqno}
	</update>
	<insert id="putItem" parameterType="com.springboot.sample8.model.Item">
	insert into guail_tbl values(#{seqno},#{title},#{price},
		#{info},#{image_name})
	</insert>
	<delete id="deleteItem" parameterType="Integer">
	delete from guail_tbl where seqno=#{id}
	</delete>
	<select id="getItemList" resultType="com.springboot.sample8.model.Item">
	select * from guail_tbl
	</select>
	<select id="getItem" parameterType="Integer"
			resultType="com.springboot.sample8.model.Item">
	select * from guail_tbl where seqno=#{seqno}	
	</select>
</mapper>




