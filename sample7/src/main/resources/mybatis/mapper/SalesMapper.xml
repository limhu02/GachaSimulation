<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.sample7.mapper.SalesMapper">
	<select id="getMaxSaleId" resultType="Integer">
	select max(sale_id) from sales_tbl
	</select>
	<insert id="putSale" parameterType="com.springboot.sample7.model.Sale">
	insert into sales_tbl values(#{saleId},#{userId},#{saleTime})
	</insert>
	<insert id="putSaleDetail" parameterType="com.springboot.sample7.model.SaleDetail">
	insert into sales_detail_tbl values(#{saleDetailId},#{saleId},#{itemId},#{quantity},0)
	</insert>
</mapper>