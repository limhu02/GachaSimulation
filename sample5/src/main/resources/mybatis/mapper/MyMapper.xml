<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.sample5.mapper.UserMapper">
	
	
	<select id="getUser" parameterType="com.springboot.sample5.model.User" resultType="com.springboot.sample5.model.User">
		select user_id as "userId", user_pwd as "password", name as "userName" from user_info where 
		user_id=#{userId} and user_pwd=#{password}
	</select>
		<insert id="putUser" parameterType="com.springboot.sample5.model.User">
	insert into user_info values(#{userId},#{password},#{userName},
	#{address},null,null,0,#{email},#{birthday},#{job})
	</insert>
</mapper>